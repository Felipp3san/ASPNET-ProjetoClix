@model AspNet_ProjetoClix.Models.Item

@{
    ViewData["Title"] = "Eliminar Item";
}

<div class="container">
    <h1>Eliminar Item</h1>
    <hr>
    <div class="row">
        <div class="col-6"></div>
    </div>
    <div class="row">
        <div class="col-6">
            <form asp-action="EliminarPost">
                <label class="input-label" asp-for="Id"></label>
                <input class="form-control" name="itemId" asp-for="Id" readonly>
                <label class="input-label" asp-for="Item1"></label>
                <input class="form-control" asp-for="Item1" readonly>
                <label class="input-label" asp-for="Item2"></label>
                <input class="form-control" asp-for="Item2" readonly>
                <label class="input-label" asp-for="Texto"></label>
                <input class="form-control" asp-for="Texto" readonly>
                <label class="input-label" for="tipo">Tipo</label>
                <input class="form-control" name="tipo" value='@ViewData["Tipo"]' readonly>

                <div class="mt-3">
                    <button class="btn btn-danger" type="submit">Eliminar</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-route-clienteId='@ViewData["ClienteId"]'>Retornar</a>
                </div> 
            </form>
        </div>    
    </div>
</div>