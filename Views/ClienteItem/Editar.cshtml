@model AspNet_ProjetoClix.Models.Item

@{
    ViewData["Title"] = "Editar Item";
}

<div class="container">
    <h1>Editar Item</h1>
    <hr>
    <div class="row">
        <div class="col-6"></div>
    </div>
    <div class="row">
        <div class="col-6">
            <form asp-action="Editar">
                <label class="input-label" asp-for="Id"></label>
                <input class="form-control" asp-for="Id" readonly>
                <label class="input-label" asp-for="Item1"></label>
                <input class="form-control" asp-for="Item1">
                <label class="input-label" asp-for="Item2"></label>
                <input class="form-control" asp-for="Item2">
                <label class="input-label" asp-for="Texto"></label>
                <input class="form-control" asp-for="Texto">
                <label class="input-label" asp-for="TipoId">Tipo</label>
                <select class="form-control" asp-for="TipoId" asp-items="ViewBag.ListaTipos"></select>
                <input type="hidden" asp-for="ClienteId">
                
                <div class="mt-3">
                    <button class="btn btn-success" type="submit">Editar</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-route-clienteId='@ViewData["ClienteId"]'>Retornar</a>
                </div> 
            </form>
        </div>    
    </div>
</div>