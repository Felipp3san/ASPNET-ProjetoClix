@model AspNet_ProjetoClix.Models.Item

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    .modal {
        display: flex;
        background-color: gray;
        position: absolute;
        width: 500px;
        height: 250px;
        border-radius: 5px;
        padding: 0;
    }

    .overlay {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(3px);
        z-index: 1;
    }

    .hidden {
        display: none;
    }
</style>

<div class="container modal hidden bg-light p-3">
    <div class="col">
    <div class="row mx-auto h-75 m-0 p-0">
        <div class="row">
            <p class="h3 text-center">Confirmar exclus√£o?</p>
        </div>
        <div class="row text-left">
            <p class="fw-bold m-0">Id: <span class="fw-normal">@Model.Id</span></p>
            <p class="fw-bold m-0">Item 1: <span class="fw-normal">@Model.Item1</span></p>
            <p class="fw-bold m-0">Item 2: <span class="fw-normal">@Model.Item2</span></p>
            <p class="fw-bold">Texto: <span class="fw-normal">@Model.Texto</span></p>
        </div>
    </div>
    <div class="row w-100 h-25 m-0 button-box gap-2">
        <div class="col p-0">
            <button id="btnConfirm" class="btn btn-danger btn-lg w-100" type="submit">Eliminar</button>
        </div>
        <div class="col p-0">
            <a id="btnClose" class="btn btn-secondary btn-lg w-100">Cancelar</a>
        </div>
    </div>
    
    </div>
</div>

<div class="overlay hidden"></div>

<script src="~/js/eliminar.js"></script>