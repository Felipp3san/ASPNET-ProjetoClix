@model AspNet_ProjetoClix.Models.Cliente

@section EliminarStyle {
    <link rel="stylesheet" href="~/css/eliminar.css" />
}

<div class="container mt-5">
    <h1>Eliminar Cliente</h1>
</div>

<div class="container col-6 m-0">
    <form asp-action="Eliminar" method="POST">
        <label asp-for="NomeCliente"></label> 
        <input class="form-control" asp-for="NomeCliente" type="text" disabled>
        <br>
        <label asp-for="Referencia"></label>
        <input class="form-control" asp-for="Referencia" disabled>

        <div class="mt-3 d-flex gap-2">
            <a id="btnModal" class="btn btn-danger">Eliminar</button>
            <a class="btn btn-secondary" asp-action="Index">Retornar</a>
        </div>

        <div class="container bg-light modal hidden p-3">
            <div class="col">
                <div class="row w-100 h-75 m-0 p-0">
                    <div class="row text-left">
                        <p class="h3 text-center">Confirmar exclus√£o?</p> 
                    </div>
                    <div class="row mx-auto w-50 text-left">
                        <p class="m-0">Id: @Model.Id</p>
                        <p>Nome: @Model.NomeCliente</p>
                    </div>
                </div>
                <div class="row w-100 h-25 m-0 button-box gap-2">
                    <div class="col p-0">
                        <button id="btnConfirm" class="btn btn-danger btn-lg w-100" type="submit">Eliminar</button>
                    </div>
                    <div class="col p-0">
                        <a id="btnClose" class="btn btn-secondary btn-lg w-100">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>

<div class="overlay hidden"></div>

<script src="~/js/eliminar.js"></script>
